<div class="ritz-features-wrapper">
  <div class="ritz-features">
    <div class="ritz-features-slider-wrapper">
      <div class="ritz-features-slider"> 
        {% for block in section.blocks %}
          <div class="ritz-features-slide">
            <img src="{{ block.settings.image | img_url: 'master' }}">
            <p class="ritz-features-slide-caption">{{ block.settings.caption }}</p>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="ritz-features-content">
      <h2 class="ritz-features-heading">{{ section.settings.heading }}</h2>
      <p class="ritz-features-copy">{{ section.settings.text }}</p><br>
      <a class="hp-trusted-by-link" href="{{ section.settings.button_link }}" target="_blank">{{ section.settings.button_label }}</a>
    </div>
  </div>
</div>

{% schema %}
  { 
    "name": "MattressFit Features",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text"
      },
      {
        "type": "text",
        "id": "button_link",
        "label": "External Link",
        "default": "https://www.google.com"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button Label",
        "default": "Launch MattressFit"
      }
    ],
    "blocks": [
      {
        "type": "image_block",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "caption",
            "label": "Image caption"
          }
        ]
      }
    ],
    "presets": [
    ]
  }
{% endschema %}