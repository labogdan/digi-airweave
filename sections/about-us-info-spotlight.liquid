      {{ section.settings.title }}
    </h2>
    <p class="hp-info-content-copy">
      {{ section.settings.content }}
    </p>
  </div>
</div>

<script>
function playPause(videoName) {
  var video = document.getElementById(videoName)
  if (video.paused) {
    video.play();
    $('#' + videoName).next('.video-play').hide();
  } else {
    video.pause();
    $('#' + videoName).next('.video-play').show();
  }
}
document.getElementById('airweave-innovation').addEventListener('ended',function() {
  $('#airweave-innovation').next('.video-play').show();
}, false);
</script>

