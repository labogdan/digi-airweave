<div class="ritz-features-wrapper">
  <div class="ritz-features">
    <div class="ritz-features-slider-wrapper">
      <div class="ritz-features-slider"> 
        {% for block in section.blocks %}
          <div class="ritz-features-slide">
            <img src="{{ block.settings.image | img_url: 'master' }}">
            <p class="ritz-features-slide-caption">{{ block.settings.caption }}</p>
          </div>
        {% endfor %}
      </div>
    </div>
    <div class="ritz-features-content">
      <h2 class="ritz-features-heading">{{ section.settings.heading }}</h2>
      <p class="ritz-features-copy">{{ section.settings.text }}</p>
    </div>
  </div>
</div>

{% javascript %}
$(document).ready(function(){
  $('.ritz-features-slider').slick({
    dots: true,
    arrows: true,
    responsive: [ 
      {
        breakpoint: 479,
        settings: {
          arrows: false,
          dots: true
        }
      }
    ]
  });
});
{% endjavascript %}

{% schema %}
  { 
    "name": "Futon Product Features",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text"
      }
    ],
    "blocks": [
      {
        "type": "image_block",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "caption",
            "label": "Image caption"
          }
        ]
      }
    ],
    "presets": [
    ]
  }
{% endschema %}