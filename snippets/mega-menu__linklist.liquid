{% comment %}
Required values
menu_link: linklist
______________
Optional values
linklist_class: <string>
link_setting: <string>
{% endcomment %}

<div class="mega-menu__linklist {{ linklist_class }}">
  {% assign menu = linklists[menu_link] %}
  <ul>
    {% for link in menu.links %}
      <li {%if link.title contains "Shop All"%}class="shop-all-cta"{% endif %}>
        <a href="{{ link.url }}" class="mega-menu__linklist-link {% if link.active %}is-active{% endif %} left">
          {{ link.title }}
        </a>
      </li>
    {% endfor %}
  </ul>
</div>